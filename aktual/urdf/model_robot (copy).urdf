<!--<?xml version="1.0" encoding="utf-8"? -->
<robot name="model_robot">
  <!-- Base Link -->
  <link name="base_link">
    <inertial>
      <origin xyz="0.0081111 0.0012491 0.041007" rpy="0 0 0" />
      <mass value="0.1898" />
      <inertia
        ixx="0.00020491"
        ixy="3.6538E-07"
        ixz="-1.3495E-05"
        iyy="0.00024936"
        iyz="9.5605E-08"
        izz="0.00038879" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://urdf_model/meshes/base_link.STL" />
      </geometry>
      <material name="">
        <color rgba="0.79216 0.81961 0.93333 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://urdf_model/meshes/base_link.STL" />
      </geometry>
    </collision>
  </link>

  <!-- ===================== -->
  <!-- Konfigurasi Roda KANAN -->
  <!-- ===================== -->
  <link name="roda_kanan">
    <inertial>
      <origin xyz="0.034939 0.085003 0.01425" rpy="0 0 0" />
      <mass value="0.029734" />
      <inertia
        ixx="1.2291E-05"
        ixy="8.982E-11"
        ixz="3.4873E-11"
        iyy="2.0379E-05"
        iyz="-1.0991E-12"
        izz="1.2291E-05" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://urdf_model/meshes/roda_kanan.STL" />
      </geometry>
      <material name="">
        <color rgba="0.79216 0.81961 0.93333 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://urdf_model/meshes/roda_kanan.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="joint_kanan" type="continuous">
    <origin xyz="0.034939 0.085003 0.01425" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="roda_kanan" />
    <axis xyz="0 -1 0" />
  </joint>

  <!-- ===================== -->
  <!-- Konfigurasi Roda KIRI -->
  <!-- ===================== -->
  <link name="roda_kiri">
    <inertial>
      <origin xyz="0.034939 -0.085003 0.01425" rpy="0 0 0" />
      <mass value="0.029734" />
      <inertia
        ixx="1.2291E-05"
        ixy="6.0955E-11"
        ixz="-1.7196E-10"
        iyy="2.0379E-05"
        iyz="6.598E-11"
        izz="1.2291E-05" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://urdf_model/meshes/roda_kiri.STL" />
      </geometry>
      <material name="">
        <color rgba="0.79216 0.81961 0.93333 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://urdf_model/meshes/roda_kiri.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="joint_kiri" type="continuous">
    <origin xyz="0.034939 -0.085003 0.01425" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="roda_kiri" />
    <axis xyz="0 -1 0" />
  </joint>
  
  <gazebo>
  <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
    <ros>
      <remapping>cmd_vel:=/cmd_vel</remapping>
      <remapping>odom:=/odom</remapping>
    </ros>
    <update_rate>50</update_rate>
    <left_joint>joint_kiri</left_joint>
    <right_joint>joint_kanan</right_joint>
    <wheel_separation>0.170</wheel_separation>
    <wheel_radius>0.035</wheel_radius>
    <wheel_separation_multiplier>1.0</wheel_separation_multiplier>
    <wheel_radius_multiplier>1.0</wheel_radius_multiplier>
    <publish_odom>true</publish_odom>
    <publish_odom_tf>true</publish_odom_tf>
    <odometry_frame>odom</odometry_frame>
    <robot_base_frame>base_footprint</robot_base_frame>
    <command_topic>/cmd_vel</command_topic>
    <odometry_topic>/odom</odometry_topic>
    <legacy_mode>false</legacy_mode>
  </plugin>
</gazebo>

</robot>

